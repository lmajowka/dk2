<div class="container">
  <div class="page-header">
    <h1>Levels</h1>
    <%= link_to "＋ New Level", new_level_path, class: "btn btn-primary" %>
  </div>

  <% if @levels.any? %>
    <div class="levels-grid">
      <% @levels.each do |level| %>
        <div class="level-card">
          <div class="level-info">
            <%= link_to level.name, level_path(level), class: "level-name" %>
          </div>
          <div class="level-actions">
            <%= link_to "Edit", edit_level_path(level), class: "btn btn-secondary btn-sm" %>
            <%= button_to "Delete", level_path(level), method: :delete, class: "btn btn-danger btn-sm", form: { data: { turbo_confirm: "Are you sure you want to delete this level?" } } %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">
      <h2>No levels yet</h2>
      <p>Create your first level to get started.</p>
      <%= link_to "＋ Create Level", new_level_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
